generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  buyer
  seller
  rep
  admin
}

enum AuctionStatus {
  pending
  active
  closed
}

enum TransactionStatus {
  pending
  completed
  failed
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  email        String   @unique
  password     String
  role         UserRole
  profileImage String?  @map("profile_image")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  isActive     Boolean  @default(true) @map("is_active")

  // Relations
  auctions         AuctionItem[]    @relation("SellerAuctions")
  bids             Bid[]
  customer         Customer?
  buyer            Buyer?
  admin            Admin?
  representative   Representative?
  soldTransactions Transaction[]    @relation("SellerTransactions")

  @@map("users")
}

model AuctionItem {
  id            String        @id @default(cuid())
  sellerId      String        @map("seller_id")
  title         String
  description   String        @db.Text
  category      String?
  startingPrice Float         @map("starting_price")
  currentPrice  Float         @map("current_price")
  endsAt        DateTime      @map("ends_at")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  status        AuctionStatus @default(pending)

  // Relations
  seller        User            @relation("SellerAuctions", fields: [sellerId], references: [id])
  bids          Bid[]
  transactions  Transaction[]
  images        AuctionImage[]

  @@map("auction_items")
}

model AuctionImage {
  id          String   @id @default(cuid())
  auctionId   String   @map("auction_id")
  imageUrl    String   @map("image_url")
  displayOrder Int     @default(0) @map("display_order")
  isPrimary   Boolean  @default(false) @map("is_primary")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  auction AuctionItem @relation(fields: [auctionId], references: [id], onDelete: Cascade)

  @@map("auction_images")
  @@index([auctionId])
}

model Bid {
  id        String   @id @default(cuid())
  auctionId String   @map("auction_id")
  buyerId   String   @map("buyer_id")
  bidAmount Float    @map("bid_amount")
  timestamp DateTime @default(now())

  // Relations
  auction   AuctionItem @relation(fields: [auctionId], references: [id])
  buyer     User        @relation(fields: [buyerId], references: [id])

  @@map("bids")
}

model Customer {
  id         String   @id @default(cuid())
  userId     String   @unique @map("user_id")
  fullName   String   @map("full_name")
  address    String   @db.Text
  phone      String   @db.VarChar(20)
  joinedAt   DateTime @default(now()) @map("joined_at")
  totalSpent Float    @default(0) @map("total_spent")

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@map("customers")
}

model Buyer {
  id                String   @id @default(cuid())
  userId            String   @unique @map("user_id")
  rating            Float    @default(0)
  purchaseCount     Int      @default(0) @map("purchase_count")
  preferredCategory String?  @map("preferred_category")

  // Relations
  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@map("buyers")
}

model Admin {
  id           String   @id @default(cuid())
  userId       String   @unique @map("user_id")
  adminLevel   Int      @map("admin_level")
  permissions  String   @db.Text
  assignedReps Int      @default(0) @map("assigned_reps")

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@map("admins")
}

model Representative {
  id               String   @id @default(cuid())
  userId           String   @unique @map("user_id")
  region           String?
  activeAuctions   Int      @default(0) @map("active_auctions")
  customersHandled Int      @default(0) @map("customers_handled")

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@map("representatives")
}

model Transaction {
  id              String            @id @default(cuid())
  buyerId         String            @map("buyer_id")
  sellerId        String            @map("seller_id")
  auctionItemId   String            @map("auction_item_id")
  amount          Float
  paymentMethod   String            @db.VarChar(50) @map("payment_method")
  transactionDate DateTime          @default(now()) @map("transaction_date")
  status          TransactionStatus @default(pending)

  // Relations
  buyer       Buyer       @relation(fields: [buyerId], references: [id])
  seller      User        @relation("SellerTransactions", fields: [sellerId], references: [id])
  auctionItem AuctionItem @relation(fields: [auctionItemId], references: [id])

  @@map("transactions")
}